@model List<Bus>
<div class="card">
    <div class="card-body">
        <h1 class="display-5">Bus List</h1>
        <hr />
        <div>
            <a class="btn btn-sm btn-primary" asp-controller="Admin" asp-action="BusCreate">Create Bus</a>
        </div>
    </div>
</div>


@if (Model.Count > 0)
{
    <div class="card mt-3">
        <table class="table table-striped">
            <thead>
                <tr>
                    <th scope="col">Id</th>
                    <th scope="col">Name</th>
                    <th scope="col">Seating Capacity</th>
                    <th scope="col">Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var bus in Model)
                {
                    <tr>


                        <td>@bus.BusId</td>
                        <td>@bus.Name</td>
                        <td>
                            @bus.SeatingCapacity
                        </td>
                        <td>
                            <a asp-controller="Admin"
                                asp-action="BusEdit"
                                asp-route-id=@bus.BusId
                                class="btn btn-sm btn-warning">Edit
                            </a>
                            <!-- Button trigger DeleteModal -->
                            <button type="button" class="btn btn-sm btn-danger" data-bs-toggle="modal" data-bs-target="#DeleteModal_@bus.BusId">
                                Delete
                            </button>

                            <!-- DeleteModal -->
                            <div class="modal fade" id="DeleteModal_@bus.BusId" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
                                <div class="modal-dialog">
                                    <div class="modal-content">
                                        <div class="modal-header">
                                            <h5 class="modal-title" id="exampleModalLabel">Warning!</h5>
                                            <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                                        </div>
                                        <div class="modal-body">
                                            <p class="text-danger">This trip will be deleted!</p>
                                            <p>Are you sure?</p>
                                        </div>
                                        <div class="modal-footer">
                                            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">No</button>
                                            <a asp-controller="Admin"
                                       asp-action="BusDelete"
                                       asp-route-id=@bus.BusId
                                       class="btn btn-danger">Yes</a>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>

    </div>
}