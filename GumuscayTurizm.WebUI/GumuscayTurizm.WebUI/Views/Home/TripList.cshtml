@model List<TripListModel>

<form asp-controller="Home" asp-action="BuyTicket" method="get">

<div class="container col-md-12">
    <div class="card">
        <div class="card-body">
            <div class="row">
                <div class="col-md-4 text-center">
                    <h2>
                        @foreach (var city in Model)
                        {
                              

                            @city.fromWhere.Name
                            break;
                        }
                        </h2>
                </div>
                <div class="col-md-4 mt-2 text-center">
                    <i class="fa-solid fa-arrow-right"></i>
                </div>
                <div class="col-md-4 text-center">
                    <h2>
                        @foreach (var city in Model)
                        {
                            @city.toWhere.Name
                            break;
                        }
                    </h2>
                </div>
            </div>
        </div>

    </div>
</div>
@foreach (var trips in Model)
{
     <input name="BusId" type="hidden" value="@trips.BusId" />
    <input name="TripId" type="hidden" value=@trips.TripId />
    <div class="col-md-12 mt-2">
        <div class="card">
            <div class="card-body">
                <div class="row">
                    <div class="col-md-2 mt-1 text-center">
                        <h3>@trips.Time</h3>
                    </div>
                    <div class="col-md-2 mt-2 text-center">
                        <i class="fa-solid fa-bus"></i>
                        <i class="fa-solid fa-wifi"></i>
                        <i class="fa-sharp fa-solid fa-cookie-bite"></i>
                        <i class="fa-solid fa-tv "></i>
                    </div>
                    <div class="col-md-4 mt-1 text-center">
                        <h3>tvs gelecek</h3>
                    </div>
                    <div class="col-md-2 mt-1 text-center">
                        <h3>@trips.Price ₺</h3>
                    </div>
                    <div class="col-md-2 mt-1 text-center">
                        <button class="btn btn-dark" style="width:10rem" type="submit">BİLET AL</button>
                    </div>
                </div>
            </div>
        </div>
    </div>
}
</form>