@model BuyTicketModel
<form asp-controller="Home" asp-action="BuyTicket" method="post">
    <input name="BusId" type="hidden" value="@Model.BusId" />
    <input name="TripId" type="hidden" value=@Model.TripId />
    <imput name="SeatNumber" type="hidden" value=@Model.SeatNumber />
    <div class="row">
        <div class="col-md-6">
            <
            <div class="card">
                <div class="card-title">
                    <h3 class="ms-2">Passenger Info</h3>
                </div>
                <div class="row">
                    <div class="col-md-12 text-center">
                        <div class="row mb-2 mt-2">
                            <div class="col-md-4">
                                <label asp-for="PassengerFirstName">First Name</label>
                            </div>
                            <div class="col-md-8">
                                <input style="width:20rem" type="text" asp-for="PassengerFirstName" />
                            </div>
                            <span asp-validation-for="PassengerFirstName" class="text-danger"></span>
                        </div>
                        <div class="row mb-2">
                            <div class="col-md-4">
                                <label asp-for="PassengerLastName">Last Name</label>
                            </div>
                            <div class="col-md-8">
                                <input style="width:20rem" type="text" asp-for="PassengerLastName" />
                            </div>
                            <span asp-validation-for="PassengerLastName" class="text-danger"></span>
                        </div>
                        <div class="row mb-2">
                            <div class="col-md-4">
                                <label asp-for="PassengerIdentificationNumber">Identification Number</label>
                            </div>
                            <div class="col-md-8">
                                <input style="width:20rem" type="text" asp-for="PassengerIdentificationNumber" />
                            </div>
                            <span asp-validation-for="PassengerIdentificationNumber" class="text-danger"></span>
                        </div>
                        <div class="row mb-2">
                            <div class="col-md-4">
                                <label asp-for="Email">Email</label>
                            </div>
                            <div class="col-md-8">
                                <input style="width:20rem" type="text" asp-for="Email" />
                            </div>
                            <span asp-validation-for="Email" class="text-danger"></span>
                        </div>
                        <div class="row mb-2">
                            <div class="col-md-4 mt-2">
                                <label asp-for="SeatCapacity">Seat Number</label>
                            </div>
                            <div class="col-md-7 ms-4 text-center">
                                <select asp-for="SeatNumber" class="form-select" style="width:15rem">
                                    @foreach (var seat in ViewBag.AvailableSeats)
                                    {
                                        <option>@seat</option>
                                    }
                                </select>
                            </div>


                        </div>
                        

                    </div>

                </div>
            </div>
        </div>
        <div class="col-md-6">
            <div class="card">
                <img src="/images/bizimotobus.png" class="img-fluid" alt="...">
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-md-6">

        
        <div class="card">
            <div class="card-title">
                <h3 class="ms-2">Card Info</h3>
            </div>
            <div class="card-body">
                <div class="row mb-2 mt-2">
                    <div class="col-md-4">
                        <label asp-for="CardHolderName">Card Holder Name</label>
                    </div>
                    <div class="col-md-8">
                        <input style="width:20rem" type="text" asp-for="CardHolderName" />
                    </div>
                    <span asp-validation-for="CardHolderName" class="text-danger"></span>
                </div>
                <div class="row mb-2 mt-2">
                    <div class="col-md-4">
                        <label asp-for="CardNumber">Card Number</label>
                    </div>
                    <div class="col-md-8">
                            <input style="width:20rem" type="text" asp-for="CardNumber" placeholder="5890040000000016" />
                    </div>
                    <span asp-validation-for="CardNumber" class="text-danger"></span>
                </div>
                <div class="row mb-2 mt-2">
                    <div class="col-md-4">
                        <label asp-for="ExpireMonth">Expiration Month</label>
                    </div>
                    <div class="col-md-8">
                        <input style="width:20rem" type="text" asp-for="ExpireMonth" placeholder="03" />
                    </div>
                    <span asp-validation-for="ExpireMonth" class="text-danger"></span>
                </div>
                <div class="row mb-2 mt-2">
                    <div class="col-md-4">
                        <label asp-for="ExpireYear">Expiration Year</label>
                    </div>
                    <div class="col-md-8">
                        <input style="width:20rem" type="text" asp-for="ExpireYear" placeholder="2025" />
                    </div>
                    <span asp-validation-for="ExpireYear" class="text-danger"></span>
                </div>
                <div class="row mb-2 mt-2">
                    <div class="col-md-4">
                        <label asp-for="Cvc">CVC</label>
                    </div>
                    <div class="col-md-8">
                        <input style="width:20rem" type="text" asp-for="Cvc" placeholder="123" />
                    </div>
                    <span asp-validation-for="Cvc" class="text-danger"></span>
                </div>
                <div class="row mb-2">
                <div class="col-md-12">
                        @*<a asp-controller="Home" asp-action="BuyTicket" asp-route-id="@Model.TripId" class="btn btn-continue" type="submit">Continue</a>*@
                        <button class="btn btn-dark"  type="submit">BİLET AL</button>
                </div>


                </div>
            </div>
        </div>
        </div>
    </div>
    <input type="hidden" name="Email" value="@Model.Email" />
</form>


