@{
    ViewData["Title"] = "Home Page";
}
@model HomePageModel
<form asp-controller="Home" asp-action="TripList">
<div class="container" style="height: 8rem">
    <br />
    <br/>
    <h1 class="text-white">SEFER SEÇİNİZ</h1>
</div>
<div class="row">
<div class="col-md-8">
<div class="card" style="width: 40rem">
    <div class="card-body" style="width: 40rem">
        <select class="form-select" asp-for="fromWhereId">
            <option selected >Kalkış yeri seçiniz</option>
           @foreach(var city in Model.Cities)
            {
                <option value="@city.CityId">@city.Name</option>
            }
        </select>
            <select class="form-select mt-3" asp-for="toWhereId">
                <option selected>Varış yeri seçiniz</option>
                @foreach (var city in Model.Cities)
                {
                    <option value="@city.CityId">@city.Name</option>
                }
            </select>
            <input asp-for="Date" placeholder="25.12.2022" class="form-control mt-3" type="date"/>

    </div>
</div>
</div>
<div class="col-md-4">
        <div class="row align-text-bottom mt-5" style="height:5rem">
            <button class="btn btn-light" type="submit">Sefer Ara</button>
        </div>
</div>
</div>
</form>
